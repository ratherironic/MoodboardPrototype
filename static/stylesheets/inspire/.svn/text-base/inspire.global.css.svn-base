/*
* inspire.global.css
*
*/
body { background: url(../../images/bkg.page-bg.jpg) 0 0 repeat scroll #2f2f2f; color: #444; }
strong { font-weight: bold }
em { font-style: italic }
object { outline: medium none !important }
header { background: url("../../images/bkg.header.png") repeat scroll 0 0 transparent; height: 91px; position: relative; width: 100%; z-index: 9999; }
header h1 { background: url("../../images/bkg.header-logo.png") no-repeat scroll 0 0 transparent; display: block; height: 41px; left: 77px; position: absolute; text-indent: -3000px; top: 30px; width: 187px; }
header > ul { border-left: 1px solid #c7c7c7; position: absolute; right: 55px; top: 17px; }
header ul li { position: relative; }
header ul li.favorites { background: url("../../images/bkg.header-menu.png") no-repeat scroll -214px 16px transparent; }
header ul li.favorites:hover ul { display: block }
header ul li.setting { background: url("../../images/bkg.header-menu.png") no-repeat scroll -286px 16px transparent; }
header ul li.setting:hover ul { display: block }
header ul li ul { background: url("../../images/bkg.header-dropdown-top.png") no-repeat scroll 17px 0 transparent; display: none; left: -17px; margin-bottom: 10px; overflow: hidden; padding-top: 29px; position: absolute; top: 57px; width: 250px; z-index: 99; }
header ul li ul li.bottom { background: url("../../images/bkg.header-dropdown-bottom.png") repeat scroll 0 0 transparent; height: 15px; padding: 0px; }
header ul li ul li { background: url("../../images/bkg.header-dropdown-bg.png") repeat scroll 0 0 transparent; display: block; height: auto; padding: 15px 0px; width: 250px; }
header ul li ul li span { height: 3px; margin: 5px 5px 0px; width: 3px; }
header ul li ul li a { color: #CFCFCF; display: block; font-weight: bold; margin-left: 20px; text-decoration: none; text-shadow: 2px 2px #000000; }
header ul > li { border-right: 1px solid #c7c7c7; display: block; height: 57px; margin: 0px 5px; width: 45px; }
header form { position: absolute; right: 125px; top: 20px; }
header form input.submit { background: url(../../images/bkg.header-search.jpg) 0 0 repeat scroll #2f2f2f; }
header form input.submit:hover { background-position: 0 50px }
header form input.reset {  background: url("../../images/bkg.header-menu.png") no-repeat scroll 17px 16px transparent;  }
header form input.button { border: medium none; display: block; float: left; font-size: 14px; font-weight: bold; height: 50px; margin: 0 5px; padding: 0; text-indent: -999999px; width: 59px; }
#SearchQuery { background: url("../../images/bkg.search-box.jpg") repeat scroll 0 0 #2F2F2F; border: none; display: block; float: left; height: 49px; line-height: 18px; margin: 2px 0 0; padding: 0 10px 0 5px; width: 273px; }
#container { background: url("../../images/bkg.content-shadow.png") no-repeat scroll center top transparent; height: 388px; margin: -20px auto 0; }
#Loading { margin: 0px auto; padding-top: 40px; width: 100px; }

#heartedContent { height: 100%; position: fixed; top: 100%; width: 100%; z-index: 999999; }
#heartedContent h2 { color: #fff; font-size: 123.1%; font-weight: bold; margin: 10px; }
#favoritestab { background: url("../../images/bkg.show-favorites-sprite.png") no-repeat scroll 0 -68px transparent; display: block; height: 68px; left: -162px; margin-left: 50%; margin-top: -68px; position: fixed; text-indent: -9999px; width: 344px; }
#favoritestab.hearted { background-position: 0 0; } 
#heartedWrapper { background: none repeat scroll 0 0 #2F2F2F; border-top: 2px solid #000000; height: 900px; overflow: auto; padding: 41px 20px 20px 0; }
#heartedWrapper .twitter { float: left; width: 257px; }
#heartedWrapper .flickr { float: left; width: 260px; }
#searchTermsContainer { overflow: hidden; }
#searchTermsContainer li { float: left; }
#searchTermsContainer li a { color: #fff; font-weight: bold; margin: 10px; }

#WelcomeMessage { background-color: #EEEEF0; font-family: 'Terminal Dosis',sans-serif; height: 374px; left: 50%; margin-top: -187px; margin-left: -190px; padding: 10px; position: fixed; top: 50%; width: 380px; -webkit-box-shadow: 0px 0px 4px #000; -moz-box-shadow: 0px 0px 4px #000; box-shadow: 0px 0px 4px #000;  }
#WelcomeMessage img { display: block; margin: 0 auto; width:61px; }
#WelcomeMessage h3 { color:#88BE08; font-size: 799%; font-weight: 800; line-height: 65px; margin-left: 8px; }
#WelcomeMessage p.welcome { font-size: 500%; margin-top: -20px; }
#WelcomeMessage p.sub-top { font-size: 343%; line-height: 80px; margin-left: 13px; }
#WelcomeMessage p.sub { font-size: 293%; line-height: 5px; margin-left: 13px; }
#WelcomeMessage p.journey { font-size: 161%; font-weight: 800; line-height: 81px; margin-left: 13px; }

#modal { background: url('../../images/modal-background.png') transparent; height: 100%; left: 0px; position: fixed; top: 0px; width: 100%; z-index: 10000; }
#youtube-player { height: 320px; left: 50%; margin-left: -290px; margin-top: -164px; position: absolute; text-align: center; top: 50%; width: 580px; z-index: 10001; }
#youtube-player  iframe { clear: both; height: 300px; padding: 4px; width: 500px; }
#youtube-player .frame { background: #5e5e5e; height: 334px; margin-left: auto; margin-right: auto; padding: 4px; width: 508px; }
#youtube-player .frame .close { float: right; font-family: Arial; font-size: 14px; font-weight: bold; line-height: 20px; padding: 4px; }
#youtube-player .frame .close .x { background: black; color: #5e5e5e; float: right; font-size: 14px; height: 16px; line-height: 14px; margin-left: 4px; padding-bottom: 2px; padding-left: 4px; padding-right: 4px; padding-top: 2px; }


/* Global Classes */
.item { background: #fff; float: left; margin: 0 0 10px 0; padding: 0; position: relative; width: 240px; }
.col1 { width: 260px }
.col2 { width: 260px }
.col3 { width: 260px }
.twitter img { float: left; padding: 0 5px 5px 0; }
.flickr img { width: 100% }
.youtube img { width: 100% }
.flickr,
.vimeo,
.youtube,
.wikipedia,
.wordnik,
.twitter { -webkit-box-shadow: 0px 0px 4px #000; -moz-box-shadow: 0px 0px 4px #000; box-shadow: 0px 0px 4px #000; }
.heartedItem { background: none repeat scroll 0 0 #FFFFFF; float: left; margin: 10px; padding: 0; position: relative; width: 260px; }

/**** Gutters ****/
.has-gutters .item { margin: 5px 0 }
.has-gutters .col1 { width: 90px }
.has-gutters .col2 { width: 230px }
.has-gutters .col3 { width: 370px }
.has-gutters .col4 { width: 550px }
.twitter_btn { display: block; min-height: 60px; }
.buttonHover { filter: alpha(opacity=70); height: 50px; height: 100%; opacity: 0.7; position: absolute; top: 0; width: 50px; width: 100%; z-index: 888; }
a.favoriteButton { background: url("../../images/sprites.png") repeat scroll -305px 0 transparent; height: 50px; position: absolute; right: 0; text-indent: -9999px; top: 0; width: 50px; z-index: 999; }
a:hover.favoriteButton { background: url("../../images/sprites.png") repeat scroll -305px -50px transparent }
.type { color: #FFFFFF; font-size: 18px; font-style: italic; font-weight: bold; left: 10px; position: absolute; top: 5px; z-index: 888; }
.twitterHover { background: #3fccff }
.flickrHover { background: #fc1b88 }
.youtubeHover { background: #a81000 }
a.playVideoButton { background: url("../../images/sprites.png") -435px 0 transparent; display: block; filter: alpha(opacity=50); height: 90px; left: 40%; opacity: .5; position: absolute; text-indent: -99999px; top: 25%; width: 50px; z-index: 999; }
a:hover.playVideoButton { filter: alpha(opacity=100); opacity: 1; }
.removeOpacity { filter: alpha(opacity=100); opacity: 1; }
#submissionForm { height: 40px; margin: 0 0 0 20px; padding: 0; width: auto; }
.greyButton { background: none repeat scroll 0 0 #ACACAC; border: medium none; color: #FFFFFF; display: block; float: left; font-size: 14px; font-weight: bold; height: 40px; margin: 0 5px 0 0; padding: 0; width: 67px; }
#settingsButton { background: url("../../images/sprites.png") repeat scroll -237px -3px #ACACAC; text-indent: -3000px; width: 55px; }
#heartButton { background: url("../../images/sprites.png") repeat scroll -359px -3px #ACACAC; text-indent: -3000px; width: 55px; }
#settingsRow { background: none repeat scroll 0 0 #464646; height: 40px; margin: 9px 0 0; padding: 0 0 0 20px; }
#settingsRow li { background: none repeat scroll 0 0 #ACACAC; border: medium none; color: #FFFFFF; display: block; float: left; font-size: 14px; font-weight: bold; height: 40px; margin: 0 12px 0 0; padding: 0; width: 108px; }
#settingsRow li a:link { background: none repeat scroll 0 0 #ACACAC; color: #FFFFFF; display: block; height: 38px; line-height: 35px; text-align: center; text-decoration: none; width: 108px; }
.itemSelected { filter: alpha(opacity=30); opacity: 0.3; }
